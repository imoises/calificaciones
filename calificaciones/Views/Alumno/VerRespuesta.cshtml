<script src="~/Scripts/Rich text wysiwyg/tinymce.min.js"></script>
<script src="~/Scripts/Rich text wysiwyg/tiny.js"></script>

@{
    ViewBag.Title = "VerRespuesta";
    Layout = "~/Views/Shared/AlumnosLayout.cshtml";
}


@model calificaciones.Entidades.Pregunta

<br />

<div class="container">
    <div>
        @Model.Clase.Nombre - @Model.Tema.Nombre
    </div>

    <h3>@Model.Nro. @Model.Pregunta1 </h3>


    <div class="">
        <form action="#">
            <fieldset>
                <input type="hidden" name="IdPregunta" value="@Model.IdPregunta" />

                <div class="form-group">
                    <textarea name="Respuesta" class="form-control" rows="7" disabled>@TempData["Respuesta"]</textarea>
                </div>

                <div class="text-center">
                    <a href="~/Alumno/Preguntas" class="btn btn-primary align-items-center  col-sm-2">Volver</a>
                </div>
            </fieldset>
        </form>
    </div>

</div>