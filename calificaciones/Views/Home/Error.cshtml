@{
    Layout = "~/Views/Shared/AnonimoLayout.cshtml";
}

@model calificaciones.Models.Usuario

<div class="text-center align-middle">
    <div class="container col-sm-5">
        <h1 class="text-center">Ingresar</h1>

        <div class="jumbotron align-self-center">
            <form action="@Url.Action("Sesion", "Home")" method="post">
                <fieldset>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label text-right">Email</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label text-right">Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-check text-center">
                            <label class="form-check-label">
                                @*<input class="form-check-input" type="checkbox" value="" id="" name="soyProfesor">*@
                                @Html.CheckBoxFor(s => s.SoyProfesor)
                                Soy Profesor
                            </label>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary align-items-center" id="btnIngresar" name="btnIngresar">Ingresar</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

</div>



