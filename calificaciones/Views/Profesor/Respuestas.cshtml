@{
    ViewBag.Title = "Respuestas";
    Layout = "~/Views/Shared/ProfesorLayout.cshtml";
}

@model  calificaciones.Entidades.Pregunta
<div class="">
    <div>
        <h1 class="m-4"><b>Respuestas</b></h1>
    </div>

    @Html.Raw(TempData["Mensaje"])
    <br />
    <ol class="breadcrumb">
        <li><a class="btn btn-outline-info" href="/Profesor/Respuestas/Todas">Todas</a></li>
        <li><a class="btn btn-outline-info" href="/Profesor/Respuestas/SinCorregir">Sin Corregir</a></li>
        <li><a class="btn btn-outline-info" href="/Profesor/Respuestas/Correctas">Correcta</a></li>
        <li><a class="btn btn-outline-info" href="/Profesor/Respuestas/Regular">Regular</a></li>
        <li><a class="btn btn-outline-info" href="/Profesor/Respuestas/Mal">Mal</a></li>
    </ol>

    <div class="breadcrumb btn-group btn-group-toggle" role="group">
        @Html.ActionLink("Todas", "Respuestas", "Profesor", new { Tipo = "Todas" }, new { @class = "btn btn-outline-info text-info" })
        @Html.ActionLink("Sin Corregir", "Respuestas", "Profesor", new {Tipo = "SinCorregir" }, new { @class = "btn btn-outline-info" })
        @Html.ActionLink("Correcta", "Respuestas", "Profesor", new {Tipo = "Correcta" }, new { @class = "btn btn-outline-info text-success" })
        @Html.ActionLink("Regular", "Respuestas", "Profesor", new { Tipo = "Regular" }, new { @class = "btn btn-outline-info text-warning" })
        @Html.ActionLink("Mal", "Respuestas", "Profesor", new {Tipo = "Mal" }, new { @class = "btn btn-outline-info text-danger" })
    </div>
</div>

<div class="container-fluid">

    <table id="example" class="display" style="width:100%">
        <thead>
            <tr>
                <th scope="col">Alumno</th>
                <th scope="col">Fecha</th>
                <th scope="col">Respuesta</th>
                <th scope="col">Pregunta</th>
                <th scope="col">Acción</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var respuesta in Model.RespuestaAlumnoes)
                {
                    <tr class="table-primary">
                        <td>@respuesta.Alumno.Nombre @respuesta.Alumno.Apellido</td>
                        <td>@respuesta.FechaHoraRespuesta</td>
                        <td>@Html.Raw(@respuesta.Respuesta.ToString())</td>
                        <td>@respuesta.Pregunta.Pregunta1</td>


                        <td>@Html.ActionLink("Evaluar pregunta", "EvaluarRespuestas", "Profesor", new { Nro = respuesta.Pregunta.Nro, Clase = respuesta.Pregunta.Clase.Nombre, Tipo = "Todas" }, new { @class = "btn btn-outline-info text-info" })</td>

                    </tr>
                }}

        </tbody>
        <tfoot>
            <tr>
                <th scope="col">Alumno</th>
                <th scope="col">Fecha</th>
                <th scope="col">Respuesta</th>
                <th scope="col">Pregunta</th>
                <th scope="col">Acción</th>
            </tr>
        </tfoot>
    </table>

</div>




