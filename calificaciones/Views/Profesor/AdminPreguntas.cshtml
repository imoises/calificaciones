@{
    ViewBag.Title = "AdminPreguntas";
    Layout = "~/Views/Shared/UsuarioLayout.cshtml";
}

@model  List<calificaciones.Entidades.Pregunta>
<div class="container">
    <h1 class="m-4">Admin Preguntas</h1>
    <div class="text-right m-2">
        <b>@Html.ActionLink("Crear Pregunta", "CrearPregunta", "Profesor", new { @class = "btn btn-outline-info" })</b>
    </div>
</div>

<div class="container-fluid">
            <table class="table table-hover table-bordered table-dark">
                <thead>
                    <tr>
                        <th scope="col">Nro</th>
                        <th scope="col">Clase</th>
                        <th scope="col">Tema</th>
                        <th scope="col">Pregunta</th>
                        <th scope="col">Fecha Desde</th>
                        <th scope="col">Fecha Hasta</th>
                        <th scope="col">Evaluar</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var pregunta in Model)
                        {
                    <tr class="table-primary">
                        <td>@pregunta.Nro</td>
                        <td>@pregunta.Clase.Nombre</td>
                        <td>@pregunta.Tema.Nombre</td>

                        <td>@Html.ActionLink(@pregunta.Pregunta1, "ModificarPregunta", "Profesor", new {@class="text-info" })</td>
                        <td>@pregunta.FechaDisponibleDesde</td>
                        <td>@pregunta.FechaDisponibleHasta</td>                         
                        <td>@Html.ActionLink("Evaluar", "EvaluarRespuestas", "Profesor", new {id = pregunta.Nro}, new { @class = "" })</td>
                        <td><i class="fas fa-user"></i></td>

                    </tr>
                        }}
                </tbody>
            </table>

            <div class="float-right">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <a class="page-link" href="#">&laquo;</a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">4</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">5</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">&raquo;</a>
                    </li>
                </ul>
            </div>


</div>


